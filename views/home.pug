extends ./layouts/main

block content
    .home_grid_wrap
        each cooking in cookings
            a.home_cooking_wrap(href=`/cooking/${cooking.id}`)
                //- pre(style="color: blue") #{name.cookingName}
                .home_img_wrap
                    if (cooking.image != null)
                        img.home_content_img(src=`${cooking.image}`)
                    else 
                        img.home_content_img(src=`${cooking.chefType === "0" ? "https://i.ibb.co/wh1HrbC/cookingjinju.png" : "https://i.ibb.co/h1wh5Km/cookingyongsub.png"}`)
                .home_content_wrap 
                    .home_content_main 
                        .home_content_title #{cooking.cookingName}
                        .home_content_description #{cooking.cookingDes}
                    .home_content_chef 
                        img.home_content_chef_img(src=`${cooking.chefType === "0" ? "https://i.ibb.co/0rk2xmM/Rectangle-1748.png" : "https://i.ibb.co/gVmJq9k/Rectangle-1749.png"}`)
                        .home_content_chef_nickname #{cooking.chefNickname}
